{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default",
      "description": "Default build",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/bin/${presetName}",
      "cacheVariables": {
        "ENABLE_CLANG_TIDY": "OFF",
        "CMAKE_CONFIGURATION_TYPES": "Release;Debug",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_CXX_SCAN_FOR_MODULES": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror -pedantic -pedantic-errors -Wconversion -Wsign-conversion",
        "CMAKE_CXX_COMPILER": "g++-14"
      }
    },
    {
      "name": "clang-tidy",
      "displayName": "Clang-Tidy Enabled",
      "description": "Enable clang-tidy static analysis",
      "inherits": "default",
      "cacheVariables": {
        "ENABLE_CLANG_TIDY": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "gcc-debug",
      "configurePreset": "default",
      "configuration": "Debug"
    },
    {
      "name": "gcc-release",
      "configurePreset": "default",
      "configuration": "Release"
    },
    {
      "name": "clang-tidy-debug",
      "configurePreset": "clang-tidy",
      "configuration": "Debug"
    },
    {
      "name": "clang-tidy-release",
      "configurePreset": "clang-tidy",
      "configuration": "Release"
    }
  ]
}
